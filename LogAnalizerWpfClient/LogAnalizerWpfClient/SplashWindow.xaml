<Window x:Class="LogAnalizerWpfClient.SplashWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="DrillView Alarm Log Analyzer - Initializing..."
        WindowStyle="None"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterScreen"
        AllowsTransparency="True"
        Background="Transparent"
        Width="1024"
        Height="768"
        Topmost="True"
        Opacity="0"
        Loaded="SplashWindow_Loaded">

    <Window.Resources>
        <Storyboard x:Key="FadeStoryboard">
            <DoubleAnimationUsingKeyFrames Storyboard.TargetProperty="Opacity">
                <LinearDoubleKeyFrame Value="1" KeyTime="0:0:3"/>   
                <DiscreteDoubleKeyFrame Value="1" KeyTime="0:0:6"/> 
                <LinearDoubleKeyFrame Value="0" KeyTime="0:0:9"/>   
            </DoubleAnimationUsingKeyFrames>
        </Storyboard>
    </Window.Resources>

    <Border CornerRadius="20"
            Padding="20"
            BorderBrush="#FF3C3C3C"
            BorderThickness="2">
        <Border.Background>
            <ImageBrush ImageSource="Images/Drilling-Solutions-scaled.jpeg" Stretch="UniformToFill"/>
            
        </Border.Background>
        <StackPanel HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    Margin="10">
            <TextBlock Text="ðŸ” DrillView Alarm Log Analyzer"
                       Foreground="White"
                       FontSize="36"
                       FontWeight="Bold"
                       HorizontalAlignment="Center"
                       Margin="0,-80,0,10"/>
            <TextBlock Text="Loading, please wait..."
                       Foreground="White"
                       FontSize="16"
                       HorizontalAlignment="Center"
                       Margin="30,-0,0,20"/>
            <ProgressBar IsIndeterminate="True"
                         Height="3"
                         Width="500"
                         Foreground="DeepSkyBlue"
                         Margin="60,-100,0,0"/>
        </StackPanel>
    </Border>

</Window>